<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="62dp"
        android:layout_height="65dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:background="@drawable/back_button_background"
        android:contentDescription="@string/back_button_desc"
        android:padding="16dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_back_arrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/signCardBackground"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/sign_background_shape"
        android:rotation="45"
        app:layout_constraintBottom_toTopOf="@+id/bottom_card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/signImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:contentDescription="@string/detected_sign_desc"
        app:layout_constraintBottom_toBottomOf="@+id/signCardBackground"
        app:layout_constraintEnd_toEndOf="@+id/signCardBackground"
        app:layout_constraintStart_toStartOf="@+id/signCardBackground"
        app:layout_constraintTop_toTopOf="@+id/signCardBackground"
        tools:src="@tools:sample/avatars" />

    <LinearLayout
        android:id="@+id/bottom_card"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/card_background_color"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.4">

        <TextView
            android:id="@+id/appNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed-medium"
            android:letterSpacing="0.2"
            android:text="@string/app_name_styled"
            android:textColor="@android:color/white"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/signDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="4dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            tools:text="B-20. Oznacza znak do bezwzględnego zatrzymania pojazdu i ustąpienia pierwszeństwa przed dalszą jazdą." />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>