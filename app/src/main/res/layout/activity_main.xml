<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context=".MainActivity">

        <androidx.camera.view.PreviewView
            android:id="@+id/viewFinder"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Obramowanie przycisku (zewnętrzny pierścień) -->
        <View
            android:id="@+id/shutter_ring"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="40dp"
            android:background="@drawable/shutter_ring"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Główny przycisk (białe wypełnienie) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/image_capture_button"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:backgroundTint="@color/shutter_button_tint"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:insetLeft="0dp"
            android:insetRight="0dp"
            app:cornerRadius="32.5dp"
            app:layout_constraintBottom_toBottomOf="@id/shutter_ring"
            app:layout_constraintEnd_toEndOf="@id/shutter_ring"
            app:layout_constraintStart_toStartOf="@id/shutter_ring"
            app:layout_constraintTop_toTopOf="@id/shutter_ring" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
